{
  "name": "syntax-highlighter",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "This is an extension for chat_work to highlight source code",
  "background":{
    "scripts": [
			"js/background.js"
		]
  },
    "content_scripts": [
    {
      "matches": [
        "https://kcw.kddi.ne.jp/*",
				"https://www.chatwork.com/*"
      ],
      "js": [
        "js/jquery-2.2.3.min.js",
        "js/highlight.min.js",
        "js/content-script.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "https://kcw.kddi.ne.jp/*",
		"https://www.chatwork.com/*"
  ],
  "page_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "syntax-highlighter",
    "default_popup": "html/option.html"
  },
  "icons":{
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources":[
    "style/highlight/agate.min.css",
    "style/highlight/default.min.css",
    "style/highlight/github-gist.min.css",
    "style/highlight/github.min.css",
    "style/highlight/qtcreator_dark.min.css",
    "style/highlight/solarized_dark.min.css"
  ]

}
